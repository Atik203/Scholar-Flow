PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/scholar_flow
DIRECT_DATABASE_URL=postgresql://postgres:password@localhost:5432/scholar_flow
USE_PGVECTOR=false

# Auth / JWT
JWT_SECRET=change_me_jwt_secret_min_32_chars
EXPIRES_IN=1d
REFRESH_TOKEN_SECRET=change_me_refresh_secret_min_32_chars
REFRESH_TOKEN_EXPIRES_IN=7d
NEXTAUTH_SECRET=change_me_nextauth_secret

# Frontend origin
FRONTEND_URL=http://localhost:3000

# Password reset
RESET_PASS_TOKEN=change_me_reset_secret
RESET_PASS_TOKEN_EXPIRES_IN=5m
RESET_PASS_LINK=http://localhost:3000/reset-password

# Email verification
VERIFY_EMAIL_LINK=http://localhost:3000/verify-email

# Feature flags (keep in sync with frontend .env.local.example)
FEATURE_SEMANTIC_SEARCH=false
FEATURE_ANNOTATIONS=false
FEATURE_CITATION_GRAPH=false
FEATURE_BILLING=false
FEATURE_AI_ASSISTANT=false
FEATURE_WORKSPACES=false
FEATURE_EXTERNAL_IMPORTS=false

# Upload / Paper Processing (Phase 1 Week 3)
FEATURE_UPLOADS=true
MAX_UPLOAD_MB=25
ALLOWED_UPLOAD_MIME=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document
TEXT_EXTRACTION_TIMEOUT_MS=20000
CHUNK_MAX_TOKENS=800
VIRUS_SCAN_ENABLED=false

# Object storage (S3 compatible)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=scholarflow-dev
S3_ACCESS_KEY=dev_access
S3_SECRET_KEY=dev_secret
AWS_REGION=us-east-1

# OpenAI (optional Phase 2+)
OPENAI_API_KEY=

# Billing (placeholders; do NOT commit real keys)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STORE_ID=
STORE_PASS=
SUCCESS_URL=http://localhost:3000/payment/success
CANCEL_URL=http://localhost:3000/payment/cancel
FAIL_URL=http://localhost:3000/payment/fail

# Redis (jobs / cache)
REDIS_URL=redis://localhost:6379

# Email SMTP (optional)
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=