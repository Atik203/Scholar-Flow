    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "api",
    "express",
    "prisma",
    "postgresql",
    "scholar-flow"
  ],
  "author": "Scholar-Flow Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.9.2"
  }
}
