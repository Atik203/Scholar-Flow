{
  "name": "@scholar-flow/backend",
  "version": "1.0.0",
  "description": "Scholar-Flow Backend API",
  "main": "dist/server.js",
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --no-notify --watch src src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "postinstall": "prisma generate --sql",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "clean": "rimraf dist",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate --sql",
    "db:generate:watch": "prisma generate --sql --watch",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset --force"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.888.0",
    "@aws-sdk/s3-request-presigner": "^3.888.0",
    "@prisma/client": "6.16.2",
    "@prisma/instrumentation": "^6",
    "@types/nodemailer": "^7.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "html-docx-js": "^0.3.1",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.0.212",
    "mammoth": "^1.11.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.6",
    "office-text-extractor": "^3.0.3",
    "openai": "^4.20.1",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdf2json": "^3.2.2",
    "pgvector": "^0.2.0",
    "prisma": "^6.14.0",
    "puppeteer": "^24.22.2",
    "redis": "^4.6.11",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.3",
    "sslcommerz-lts": "^1.0.3",
    "stripe": "^19.0.0",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tesseract.js": "^5.0.4",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/html-docx-js": "^0",
    "@types/http-status": "^1.1.2",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/pdf-parse": "^1.1.5",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
