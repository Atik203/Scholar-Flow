{
  "name": "scholar-flow",
  "version": "1.0.1",
  "description": "AI-Powered Research Paper Collaboration Hub",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev": "yarn workspace @scholar-flow/backend dev & yarn workspace @scholar-flow/frontend dev",
    "dev:turbo": "turbo run dev",
    "dev:backend": "yarn workspace @scholar-flow/backend dev",
    "dev:frontend": "yarn workspace @scholar-flow/frontend dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,json}\"",
    "setup": "yarn install --immutable && yarn workspace @scholar-flow/backend prisma generate --sql",
    "setup:clean": "yarn clean && yarn install && yarn workspace @scholar-flow/backend prisma generate --sql",
    "db:migrate": "yarn workspace @scholar-flow/backend prisma migrate dev",
    "db:generate": "yarn workspace @scholar-flow/backend prisma generate --sql",
    "db:studio": "yarn workspace @scholar-flow/backend prisma studio",
    "db:seed": "yarn workspace @scholar-flow/backend ts-node prisma/seed.ts",
    "db:reset": "yarn workspace @scholar-flow/backend prisma migrate reset --force"
  },
  "devDependencies": {
    "@turbo/gen": "^2.5.5",
    "@types/node": "^20",
    "@types/react-window": "^1",
    "prettier": "^3.0.3",
    "prisma": "^6.15.0",
    "rimraf": "^5.0.5",
    "turbo": "^2.5.6",
    "typescript": "^5.2.2"
  },
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@4.9.2+sha512.1fc009bc09d13cfd0e19efa44cbfc2b9cf6ca61482725eb35bbc5e257e093ebf4130db6dfe15d604ff4b79efd8e1e8e99b25fa7d0a6197c9f9826358d4d65c3c",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "lucide-react": "^0.542.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-window": "^1.8.11"
  }
}
